<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        @* TODO(auth): Restore AuthorizeRouteView after server-side auth is configured *@
        <RouteView RouteData="routeData" DefaultLayout="@typeof(PlexRequestsHosted.Components.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(PlexRequestsHosted.Components.Layout.MainLayout)">
            <MudText Typo="Typo.h5" Class="m-4">Sorry, there's nothing at this address.</MudText>
        </LayoutView>
    </NotFound>
</Router>

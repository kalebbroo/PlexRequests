<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <!-- Load base frameworks first -->
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />
    <link rel="stylesheet" href="_content/MudBlazor/MudBlazor.min.css" />
    <!-- Generated scoped CSS from *.razor.css files -->
    <link rel="stylesheet" href="@Assets["PlexRequestsHosted.styles.css"]" />
    <!-- Keep app.css last so our overrides win the cascade -->
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <CascadingAuthenticationState>
        <MudThemeProvider Theme="@_theme" IsDarkMode="true" />
        <MudPopoverProvider />
        <MudDialogProvider />
        <MudSnackbarProvider />
        <Router AppAssembly="typeof(App).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="typeof(PlexRequestsHosted.Components.Layout.MainLayout)">
                    <Authorizing>
                        <LayoutView Layout="typeof(PlexRequestsHosted.Components.Layout.MainLayout)">
                            <div class="m-4">
                                <p>Signing you in...</p>
                            </div>
                        </LayoutView>
                    </Authorizing>
                    <NotAuthorized>
                        <RedirectToLogin />
                    </NotAuthorized>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <LayoutView Layout="typeof(PlexRequestsHosted.Components.Layout.MainLayout)">
                    <p class="m-4">Sorry, there's nothing at this address.</p>
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingAuthenticationState>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@using MudBlazor
@using PlexRequestsHosted.Components.Shared

@code {
    private MudTheme _theme = new()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = "#E5A00D",          // Plex Orange
            PrimaryContrastText = "#000000", // Black text on orange
            Secondary = "#CC8A0B",        // Plex Dark Orange
            Background = "#141414",      // bg-primary
            Surface = "#181818",         // bg-secondary
            AppbarBackground = "rgba(20, 20, 20, 0)",
            AppbarText = "#FFFFFF",
            TextPrimary = "#FFFFFF",
            TextSecondary = "#B3B3B3",
            ActionDefault = "#B3B3B3",
            ActionDisabled = "#4B4B4B",
            Divider = "rgba(255,255,255,0.1)",
            DividerLight = "#2A2A2A",
            Success = "#46d369",
            Warning = "#ffa500",
            Error = "#f44336",
            Info = "#2196f3"
        },
        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = new[] { "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue", "Arial", "sans-serif" }
            }
        }
    };
}

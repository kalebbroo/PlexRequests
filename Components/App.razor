<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["PlexRequestsHosted.styles.css"]" />
    <link rel="stylesheet" href="_content/MudBlazor/MudBlazor.min.css" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <CascadingAuthenticationState>
        <MudThemeProvider Theme="@_theme" IsDarkMode="true" />
        <MudPopoverProvider />
        <MudDialogProvider />
        <MudSnackbarProvider />
        <Routes @rendermode="InteractiveServer" />
    </CascadingAuthenticationState>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@using MudBlazor

@code {
    private MudTheme _theme = new()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = "#E5A00D",          // Plex Orange
            PrimaryContrastText = "#000000", // Black text on orange
            Secondary = "#CC8A0B",        // Plex Dark Orange
            Background = "#141414",      // bg-primary
            Surface = "#181818",         // bg-secondary
            AppbarBackground = "rgba(20, 20, 20, 0)",
            AppbarText = "#FFFFFF",
            TextPrimary = "#FFFFFF",
            TextSecondary = "#B3B3B3",
            ActionDefault = "#B3B3B3",
            ActionDisabled = "#4B4B4B",
            Divider = "rgba(255,255,255,0.1)",
            DividerLight = "#2A2A2A",
            Success = "#46d369",
            Warning = "#ffa500",
            Error = "#f44336",
            Info = "#2196f3"
        },
        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = new[] { "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue", "Arial", "sans-serif" }
            }
        }
    };
}
